<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EBEBEB"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        >

        <TextView
            android:id="@+id/vernum"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Verify Number"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFF"
            android:textIsSelectable="false"
            android:textSize="22dp"
            android:textStyle="bold|italic"
            />
        <TextView
            android:id="@+id/vernumskip"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="13dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:text="Skip"
            android:textColor="#FFF"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/vernum"
            app:layout_constraintTop_toTopOf="parent" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        >

    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        android:text="Confirm the number you want to verify"

        android:textColor="#302E2E"
        android:textSize="16dp"
        />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:gravity="left"
            android:text="Phone no *"
            android:textColor="#302E2E"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/n91"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:text="+91"
            android:textColor="#302E2E"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2"
            android:layout_marginTop="0dp"
            android:layout_marginStart="15dp"
            android:inputType="number"
            android:layout_toEndOf="@id/n91"
            android:maxLength="10"
            />

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/n91"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="We will send verification code to this number"
            android:textColor="#302E2E"
            android:textSize="10dp" />

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/verthisnum"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimaryDark"
                android:text="Verify this Number"
                android:textColor="#FFF"
                android:textSize="20dp" />

        </RelativeLayout>
</androidx.appcompat.widget.LinearLayoutCompat>