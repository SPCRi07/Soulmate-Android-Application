<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updatesocialdetails"
    android:orientation="vertical"
    android:background="#EBEBEB">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            >
        </TextView>


        <TextView
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/draw"
            android:text="Social Details"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFF"
            android:textIsSelectable="false"
            android:textSize="22dp"
            android:textStyle="bold|italic" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgeducation"
            android:layout_marginTop="90dp"
            android:drawableLeft="@drawable/personallife"
            android:layout_marginLeft="15dp"
            >
        </TextView>

        <TextView
            android:id="@+id/personallife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@+id/imgeducation"
            android:textSize="22dp"
            android:paddingLeft="20dp"
            android:textStyle="italic"
            android:textColor="#302E2E"
            android:text="Personal Life">
        </TextView>


        <TextView
            android:id="@+id/maritalstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personallife"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:textColor="#302E2E"
            android:textSize="17dp"
            android:text="Marital Status *">
        </TextView>


        <EditText
            android:id="@+id/updatesocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maritalstatus"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:focusableInTouchMode="false"
            android:hint="Select your social details"
            android:onClick="showDialogListView"
            android:text="" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/updatesocial"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/culture"
            >
        </TextView>

        <TextView
            android:id="@+id/txtculture"
            android:layout_below="@+id/updatesocial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/imgeducation"
            android:textSize="22dp"
            android:textStyle="italic"
            android:paddingLeft="20dp"
            android:textColor="#302E2E"
            android:text="Culture">
        </TextView>


        <TextView
            android:id="@+id/mothertongue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/txtculture"
            android:layout_marginTop="25dp"
            android:textColor="#302E2E"
            android:textSize="17dp"
            android:text="Mother Tongue *">
        </TextView>


        <EditText
            android:id="@+id/updatetongue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mothertongue"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:focusableInTouchMode="false"
            android:hint="Select your social details"
            android:onClick="showDialogListView2"
            android:text="" />

        <TextView
            android:id="@+id/religion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/updatetongue"
            android:layout_marginTop="20dp"
            android:textColor="#302E2E"
            android:textSize="17dp"
            android:text="Religion *">
        </TextView>


        <EditText
            android:id="@+id/updatereligion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/religion"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:focusableInTouchMode="false"
            android:hint="Select your religion"
            android:onClick="showDialogListView3"
            android:text="" />

        <TextView
            android:id="@+id/cast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/updatereligion"
            android:layout_marginTop="20dp"
            android:textColor="#302E2E"
            android:textSize="17dp"
            android:text="Cast *">
        </TextView>


        <EditText
            android:id="@+id/updatecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cast"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:focusableInTouchMode="false"
            android:hint="Select your cast"
            android:onClick="showDialogListView4"
            android:text="" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/updatesocialdetails_page"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimaryDark"
                android:text="UPDATE"
                android:textColor="#FFF"
                android:textSize="20dp" />
        </RelativeLayout>


    </RelativeLayout>




</RelativeLayout>
