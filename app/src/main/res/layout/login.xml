<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:orientation="vertical">
    <ImageView
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo5" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/refreshlogin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1"
            android:layout_margin="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btnedit"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="5dp"
            android:hint="Enter your Email or UserName"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            tools:ignore="NotSibling"
            />


        <ImageButton
            android:layout_width="40sp"
            android:layout_height="fill_parent"
            android:layout_above="@id/pass"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="16sp"
            android:src="@drawable/ic_mic_none_black_24dp"
            android:background="@drawable/btnedit"
            android:id="@+id/miclogin"
            android:layout_marginTop="15sp"
            tools:ignore="VectorDrawableCompat" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_margin="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnedit"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="5dp"
            android:hint="Enter your Password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/showpass"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_above="@id/login"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15sp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btnedit"
            android:src="@drawable/ic_remove_red_eye_black_24dp"
            tools:ignore="VectorDrawableCompat" />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pass"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btnbutton"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Login"
            android:textColor="#fff" />


        <TextView
            android:id="@+id/passforgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="30dp"
            android:text="Forgot Password??"
            android:textColor="#CE7777"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textsignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/passforgot"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="50dp"
            android:text="New to Soulmate?Sign Up"
            android:textColor="#CE7777"
            android:textSize="20dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textsignup"
            android:layout_alignParentRight="true"
            android:text="Log in as Guest"
            android:layout_marginTop="30sp"
            android:textColor="@color/colorPrimaryDark"
            />


    </RelativeLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>