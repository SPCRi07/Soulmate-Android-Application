<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/ds1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Matched City"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFF"
            android:textIsSelectable="false"
            android:textSize="22dp"
            android:textStyle="bold|italic" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:visibility="invisible"
        android:id="@+id/cityviewcard1"
        android:layout_width="wrap_content"
        android:layout_below="@id/ds1"
        android:layout_height="wrap_content"
       android:scrollbarAlwaysDrawVerticalTrack="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        android:layout_margin="10sp"
        android:layout_marginStart="10sp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cityviewphoto"
                android:layout_width="382dp"
                android:layout_height="231dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                tools:ignore="MissingConstraints"
                android:src="@drawable/nadiad"/>

            <TextView
                android:id="@+id/cityviewname"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/cityviewphoto"
                android:fontFamily="@font/adamina"
             android:text="Blueberrys Restaurant &amp; Banquet."
                android:paddingTop="10sp"
                android:textSize="20sp"
                android:textColor="#000"/>


            <TextView
                android:id="@+id/cityviewprofileid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityviewname"
                android:layout_margin="10sp"
                android:fontFamily="@font/adamina"
                android:text="Address"
                android:textSize="15sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/cityviewprofileidretreived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityviewname"
                android:layout_margin="10sp"
                android:layout_toRightOf="@id/cityviewprofileid"
                android:fontFamily="@font/adamina"
               android:text="Nadiad-Anand Road, Nadiad, Gujarat 387001"
                android:textSize="15sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/cityviewprofileid2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityviewprofileidretreived"
                android:layout_margin="10sp"
                android:fontFamily="@font/adamina"
                android:text="Rating "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/cityviewprofileidretreived2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityviewprofileidretreived"
                android:layout_margin="10sp"
                android:layout_toRightOf="@id/cityviewprofileid"
                android:fontFamily="@font/adamina"
                android:text="4.2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/cityviewprofileid3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityviewprofileidretreived"
                android:layout_margin="10sp"
                android:fontFamily="@font/adamina"
                android:text="Rating "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/cityviewprofileidretreived4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityviewprofileidretreived"
                android:layout_margin="10sp"
                android:layout_toRightOf="@id/cityviewprofileid"
                android:fontFamily="@font/adamina"
                android:text="4.2"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/cityviewprofileid5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityviewprofileidretreived4"
                android:layout_margin="10sp"
                android:fontFamily="@font/adamina"
                android:text="Contact No "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/cityviewprofileidretreived5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityviewprofileidretreived4"
                android:layout_margin="10sp"
                android:layout_toRightOf="@id/cityviewprofileid"
                android:fontFamily="@font/adamina"
                android:text="0268 252 2899"
                android:textSize="15sp"
              android:paddingLeft="10sp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Places Available"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="20sp"
        android:drawableTop="@drawable/ic_cafe"
        />
</RelativeLayout>