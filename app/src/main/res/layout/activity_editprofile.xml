<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editprofile"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/basicdetailscard"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            android:background="#ACC1FF"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:backgroundTint="#FFF"
                android:paddingBottom="10dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backprofile"
                    android:drawableLeft="@drawable/leftarrow"
                    android:layout_marginTop="10dp"
                    >
                </TextView>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backeditprofile"
                    android:text="PROFILE ID"
                    android:layout_toRightOf="@+id/backprofile"
                    android:textSize="24dp"
                    android:textStyle="bold|italic"
                    android:fontFamily="@font/adamina"
                    android:textColor="#504C4C"
                    android:drawablePadding="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/takephoto"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:drawableRight="@drawable/camera"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/share"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="80dp"
                    android:drawableRight="@drawable/share"
                    >
                </TextView>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/editprofile_image"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_below="@+id/backeditprofile"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    android:src="@drawable/ic_user" />
        </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/basicdetailscard"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/card8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Your Photograph"
                    android:drawableLeft="@drawable/camera"
                    android:textSize="20sp"
                    android:drawablePadding="10sp"
                    android:fontFamily="@font/adamina"
                    android:padding="15sp" />
            </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Basic Details"
            android:drawableLeft="@drawable/home1"
            android:textSize="20sp"
            android:drawablePadding="10sp"
            android:fontFamily="@font/adamina"
            android:padding="15sp" />
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="13dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Career Details"
                android:drawableLeft="@drawable/parth"
                android:textSize="20sp"
                android:drawablePadding="10sp"
                android:fontFamily="@font/adamina"
                android:padding="15sp" />

        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Social Details"
                    android:drawableLeft="@drawable/social1"
                    android:textSize="20sp"
                    android:drawablePadding="10sp"
                    android:fontFamily="@font/adamina"
                    android:padding="15sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Credential Details"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:textSize="20sp"
                    android:drawablePadding="10sp"
                    android:fontFamily="@font/adamina"
                    android:padding="15sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Family Details"
                    android:drawableLeft="@drawable/family1"
                    android:textSize="20sp"
                    android:drawablePadding="10sp"
                    android:fontFamily="@font/adamina"
                    android:padding="15sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="change your Recommendation"
                    android:drawableLeft="@drawable/ic_request2"
                    android:textSize="20sp"
                    android:drawablePadding="10sp"
                    android:fontFamily="@font/adamina"
                    android:padding="15sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="change your Appearance"
                    android:drawableLeft="@drawable/appearanc1"
                    android:textSize="20sp"
                    android:drawablePadding="10sp"
                    android:fontFamily="@font/adamina"
                    android:padding="15sp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>

