<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_photorequest"
        android:layout_above="@id/photorequesttextView"
        android:layout_centerInParent="true"
        android:id="@+id/photorequestnonephoto"
        android:visibility="invisible"/>
    />
    <TextView
        android:id="@+id/photorequesttextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="not any photoRequest have been arrived "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"
        android:fontFamily="@font/almendra"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/photorequestprogredss"
            android:layout_centerInParent="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/photorequestlistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        style="@style/TwoWayView"
        android:layout_marginTop="20sp"
        />

</RelativeLayout>