<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updatecareerdetails"
    android:orientation="vertical"
    android:background="#EBEBEB"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            >
        </TextView>


        <TextView
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/draw"
            android:text="Career Details"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFF"
            android:textIsSelectable="false"
            android:textSize="22dp"
            android:textStyle="bold|italic" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgeducation"
            android:layout_marginTop="90dp"
            android:drawableLeft="@drawable/education12"
            android:layout_marginLeft="15dp"
            >
        </TextView>

        <TextView
            android:id="@+id/education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@+id/imgeducation"
            android:textSize="22dp"
            android:paddingLeft="20dp"
            android:textStyle="italic"
            android:textColor="#302E2E"
            android:text="Education">
        </TextView>

        <TextView
            android:id="@+id/txtheigheducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgeducation"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="10dp"
            android:text="Highest Education"
            android:textColor="#302E2E"
            android:textSize="17dp">

        </TextView>

        <EditText
            android:id="@+id/updateeducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtheigheducation"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:focusableInTouchMode="false"
            android:hint="Select your education"
            android:onClick="showDialogListView"
            android:text="" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/updateeducation"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/workexp"
            >
        </TextView>

        <TextView
            android:id="@+id/workexp"
            android:layout_below="@+id/updateeducation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/imgeducation"
            android:textSize="22dp"
            android:textStyle="italic"
            android:paddingLeft="20dp"
            android:textColor="#302E2E"
            android:text="Work Experience">
        </TextView>


        <TextView
            android:id="@+id/txtemoloyrrin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workexp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="10dp"
            android:text="Employee In"
            android:textColor="#302E2E"
            android:textSize="17dp">
        </TextView>


        <EditText
            android:id="@+id/updateemployeein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtemoloyrrin"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:focusableInTouchMode="false"
            android:hint="Select you are Employed In"
            android:onClick="showDialogListView2"
            android:text="" />


        <TextView
            android:id="@+id/txtoccupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/updateemployeein"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="10dp"
            android:text="Occupation"
            android:textColor="#302E2E"
            android:textSize="17dp">
        </TextView>


        <EditText
            android:id="@+id/updatetoccupation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtoccupation"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:focusableInTouchMode="false"
            android:hint="Select your Occupation"
            android:onClick="showDialogListView3"
            android:text=""

            />






        <TextView
            android:id="@+id/txtincome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/updatetoccupation"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="10dp"
            android:text="Income"
            android:textColor="#302E2E"
            android:textSize="17dp">
        </TextView>


        <EditText
            android:id="@+id/updateincome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtincome"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:focusableInTouchMode="false"
            android:hint="Select your Income"
            android:onClick="showDialogListView4"
            android:text=""
           />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/updatecareerdetailpage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:background="@color/colorPrimaryDark"
                android:text="Update"
                android:textColor="#FFF"
                android:textSize="20dp" />
        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>