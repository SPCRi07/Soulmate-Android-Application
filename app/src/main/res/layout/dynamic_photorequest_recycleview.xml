<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <androidx.cardview.widget.CardView
        android:id="@+id/photorequestcard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:scrollbarAlwaysDrawVerticalTrack="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        android:layout_margin="10sp"
        android:layout_marginStart="10sp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="160sp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:id="@+id/photorequestphoto"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
       />

            <TextView
                android:id="@+id/photorequestname"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/photorequestphoto"
                android:fontFamily="@font/adamina"
                android:hint="Name here"
                android:paddingTop="10sp"
                android:textSize="30sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="Profile ID"
                android:layout_below="@id/photorequestname"
                android:layout_toRightOf="@id/photorequestphoto"
                android:textSize="15sp"
                android:layout_margin="10sp"
                android:id="@+id/photorequestprofileid"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:hint="Profileid"
               android:layout_toRightOf="@id/photorequestprofileid"
                android:textSize="15sp"
                android:layout_margin="10sp"
                android:id="@+id/photorequestprofileidretreived"
                android:layout_below="@id/photorequestname"
                />



            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cancel_black_24dp"
                android:layout_below="@id/photorequestprofileid"
                android:layout_marginTop="20sp"
                android:id="@+id/photorequestcancel"
                android:layout_centerInParent="true"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_done_black_24dp"
                android:layout_marginTop="20sp"
                android:layout_below="@id/photorequestprofileidretreived"
                android:id="@+id/photorequestaccept"
                android:layout_marginHorizontal="240sp"
                />






        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>