<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <androidx.cardview.widget.CardView
        android:id="@+id/shortlistnamecard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:scrollbarAlwaysDrawVerticalTrack="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        android:layout_margin="10sp"
        android:layout_marginStart="10sp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="150sp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:id="@+id/shortlistphoto"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="10sp"
       />

            <TextView
                android:id="@+id/shortlistname"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/shortlistphoto"
                android:fontFamily="@font/adamina"
                android:hint="Name here"
                android:paddingTop="10sp"
                android:textSize="30sp"
                />

            <ImageButton
                android:layout_width="60sp"
                android:layout_height="50sp"
                android:layout_toRightOf="@id/shortlistprofileidretrieved"
                android:layout_alignBottom="@id/shortlistprofileidretrieved"
                android:src="@drawable/ic_cancel_black_24dp"
                android:background="#fff"
                android:id="@+id/shortlistitemdelete"
                android:layout_marginLeft="30sp"
                />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="Age"
                android:layout_below="@id/shortlistname"
                android:layout_toRightOf="@id/shortlistphoto"
                android:textSize="20sp"
                android:layout_margin="10sp"
                android:id="@+id/shortlistage"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="Profile ID"
                android:layout_below="@id/shortlistage"
                android:layout_toRightOf="@id/shortlistphoto"
                android:textSize="15sp"
                android:layout_margin="10sp"
                android:id="@+id/shortlistprofileid"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:hint="age"
                android:layout_below="@id/shortlistname"
                android:layout_toRightOf="@id/shortlistage"
                android:textSize="20sp"
                android:layout_margin="10sp"
                android:id="@+id/shortlistageretrieved"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:hint="Profileid"
                android:layout_below="@id/shortlistage"
                android:layout_toRightOf="@id/shortlistprofileid"
                android:textSize="15sp"
                android:layout_margin="10sp"
                android:id="@+id/shortlistprofileidretrieved"
                />



        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>