<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".writepassword"
    android:background="@color/colorPrimary">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/welcomegif"
            android:layout_width="match_parent"
            android:layout_height="333dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30sp"
            android:background="@color/colorPrimary"
             />

        <EditText
            android:id="@+id/enteredpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnedit"
            android:gravity="center"
            android:layout_below="@id/welcomegif"
            android:hint="Password"
            android:inputType="numberPassword"
            android:layout_marginTop="50sp"
            android:maxLength="6"
            android:maxLines="1"
            android:orientation="vertical"
            android:padding="10sp"
            android:textColorHint="@color/colorgray"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"
           />

        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttoncurve"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="667dp"
        android:layout_margin="40sp"
        tools:ignore="MissingConstraints"
        android:id="@+id/loginapppassword"
        android:text="Login"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/adamina"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"

        />

        <TextView
            android:id="@+id/forgotkeypassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enteredpassword"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/adamina"
            android:gravity="right"
            android:text="Forgot Password?"
            android:textColor="@color/colorPrimaryDarktheme"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="396dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>