<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/relsd2">

        <TextView
            android:id="@+id/draw4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:textStyle="bold"
            >
        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/draw4"
            android:text="Your ProfileVisitors"
            android:textColor="#FFF"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textIsSelectable="false"
            android:textSize="22dp"
            android:textStyle="bold|italic"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:id="@+id/profilevisitornone"
        android:text="Let's go Get See'em  "
        android:drawableTop="@drawable/ic_008_dating_app"
        android:fontFamily="@font/almendra"
        android:textColor="#000"
        android:gravity="center_horizontal|center"
        android:layout_centerInParent="true"
        android:drawablePadding="10sp"
        android:visibility="invisible"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileviewprogress"
        android:layout_centerInParent="true"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profilelistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        style="@style/TwoWayView"
        android:layout_marginTop="20sp"
        android:layout_below="@id/relsd2"
        />

</RelativeLayout>