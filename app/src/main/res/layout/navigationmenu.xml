<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:gravity="bottom"
    android:padding="20dp"
    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileimagehere"
        android:layout_width="163dp"
        android:layout_height="199dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo5"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_overlay="true"
        app:civ_border_width="2sp" />
    <TextView
        android:id="@+id/profilenamehere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:textColor="#000"
        android:fontFamily="@font/adamina"
        android:layout_gravity="end"
        android:layout_marginTop="20sp"
        android:text="empty"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:textSize="20sp"
        android:layout_below="@id/profilenamehere"
        android:textColor="#000"
        android:id="@+id/profileusername"
        android:text="empty"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginTop="40sp"
        android:gravity="top"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/profileusername"
        android:textColor="#03A9F4"
        android:id="@+id/checkprime"
        android:text="Prime"
        android:drawableLeft="@drawable/ic__logogram"
        android:drawablePadding="10sp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:fontFamily="@font/almendra"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_above="@id/progressBarNav"
        android:textColor="#299389"
        android:text="Profile Completion :"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:fontFamily="@font/adamina"
        android:layout_toLeftOf="@id/progresscompletioninper"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
       android:layout_above="@id/progressBarNav"
        android:textColor="#299389"
        android:id="@+id/progresscompletioninper"
        android:text=""
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:fontFamily="@font/adamina"
         />
    <ProgressBar
        android:id="@+id/progressBarNav"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="210dp"
        android:layout_height="25dp"
        android:indeterminate="false"
        android:max="100"
        android:min="1"
        android:progressDrawable="@drawable/myprogressbar"
        android:minHeight="20dp"
        android:background="@drawable/shape"
        android:minWidth="200dp"
        android:progress="1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10sp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
