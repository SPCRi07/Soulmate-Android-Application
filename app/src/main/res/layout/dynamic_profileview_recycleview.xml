<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <androidx.cardview.widget.CardView
        android:id="@+id/profileviewcard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:scrollbarAlwaysDrawVerticalTrack="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        android:layout_margin="10sp"
        android:layout_marginStart="10sp"
        >


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="110sp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:id="@+id/profileviewphoto"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
       />

            <TextView
                android:id="@+id/profileviewname"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/profileviewphoto"
                android:fontFamily="@font/adamina"
                android:hint="Name here"
                android:paddingTop="10sp"
                android:textSize="30sp"
                />

            

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="Profile ID"
                android:layout_below="@id/profileviewname"
                android:layout_toRightOf="@id/profileviewphoto"
                android:textSize="15sp"
                android:layout_margin="10sp"
                android:id="@+id/profileviewprofileid"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:hint="Profileid"
               android:layout_toRightOf="@id/profileviewprofileid"
                android:textSize="15sp"
                android:layout_margin="10sp"
                android:id="@+id/profileviewprofileidretreived"
                android:layout_below="@id/profileviewname"
                />






        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>