<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <androidx.cardview.widget.CardView
        android:id="@+id/requestnamecard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:scrollbarAlwaysDrawVerticalTrack="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        android:layout_margin="10sp"
        android:layout_marginStart="10sp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200sp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:id="@+id/requestphoto"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="10sp"
       />

            <TextView
                android:id="@+id/requestname"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/requestphoto"
                android:fontFamily="@font/adamina"
                android:hint="Name here"
                android:paddingTop="10sp"
                android:textSize="30sp"
                />

            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="Age"
                android:layout_below="@id/requestname"
                android:layout_toRightOf="@id/requestphoto"
                android:textSize="20sp"
                android:layout_margin="10sp"
                android:id="@+id/requestage"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:text="Profile ID"
                android:layout_below="@id/requestage"
                android:layout_toRightOf="@id/requestphoto"
                android:textSize="15sp"
                android:layout_margin="10sp"
                android:id="@+id/requestprofileid"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:hint="age"
                android:layout_below="@id/requestname"
                android:layout_toRightOf="@id/requestage"
                android:textSize="20sp"
                android:layout_margin="10sp"
                android:id="@+id/requestageretrieved"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:hint="Profileid"
                android:layout_below="@id/requestage"
                android:layout_toRightOf="@id/requestprofileid"
                android:textSize="15sp"
                android:layout_margin="10sp"
                android:id="@+id/requestprofileidretreived"
                />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cancel_black_24dp"
                android:layout_below="@id/requestprofileid"
                android:id="@+id/requestcancel"
                android:layout_centerInParent="true"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_done_black_24dp"
                android:layout_below="@id/requestprofileidretreived"
                android:id="@+id/requestaccept"
                android:layout_marginHorizontal="240sp"
                />


            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/requestemail"
                android:visibility="invisible"
                android:text="email"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>